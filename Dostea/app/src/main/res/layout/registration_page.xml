<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tea"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_marginLeft="100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Yourself"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="100dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:textColor="#000000"
            android:drawableLeft="@drawable/emailicon"
            android:hint="@string/email"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/passicon"
            android:background="@null"
            android:textColor="#000000"
            android:hint="@string/password"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-smallcaps"
            />
        <EditText
            android:id="@+id/cpassword"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/passicon"
            android:textColor="#000000"
            android:hint="@string/cpassword"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-smallcaps"
            />
        <CheckBox
            android:id="@+id/accept"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:buttonTint="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I have read all the terms and conditions"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"
            android:layout_marginTop="-25dp"
            />
        <Button
            android:id="@+id/signup"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:fontFamily="sans-serif-smallcaps"
            android:background="@drawable/signup"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Already Registered | Log In here"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>